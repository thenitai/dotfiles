
#export ZSH=/Users/nitai/.oh-my-zsh
export ZSH=~/.oh-my-zsh

# User so shell prompt doesn't show it
DEFAULT_USER="nitai"

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
